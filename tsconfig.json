/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        // "forceConsistentCasingInFileNames": true,
        // "strict": true, Should not use "strict", it will enable strict mode for TypeScript
        "noImplicitReturns": true, // check return value rule
        "noFallthroughCasesInSwitch": true,
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2017",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "jszip": [
                "../node_modules/jszip/dist/jszip.min.js"
            ],
            "@environment": [
                "src/environments/environment.ts"
            ],
            "@environments/*": [
                "src/environments/*"
            ],
            "@app/utilities": [
                "src/app/utilities"
            ],
            "@app/core/*": [
                "src/app/core/*"
            ],
            "@app/theme": [
                "src/app/theme"
            ],
            "@app/modules/*": [
                "src/app/modules/*"
            ],
            "@app/shared/*": [
                "src/app/shared/*.ts"
            ],
            "@app/shared/components": [
                "src/app/shared/components/index.ts"
            ],
            "@app/shared/components/*": [
                "src/app/shared/components/*"
            ],
            "@app/shared/models": [
                "src/app/shared/models/index.ts"
            ],
            "@app/services/endpoints": [
                "src/app/services/endpoints.ts"
            ],
            "@app/services/*": [
                "src/app/services/*"
            ],
            "@app/models": [
                "src/app/models"
            ],
            "@app/models/*": [
                "src/app/models/*"
            ],
            "@app/data/*": [
                "src/app/data/*"
            ],
            "@app/state/*": [
                "src/app/state/*"
            ],
            "@svg-icons": [
                "src/assets/icons/svg-icons.constants.ts"
            ],
            // "@styles/*": [
            //     "styles/*"
            // ],
            "@utils": [
                "./dist/utils/utils",
                "./dist/utils"
            ]
        },
        "resolveJsonModule": true,
        "esModuleInterop": true
    },
    "angularCompilerOptions": {
        "annotationsAs": "static fields",
        "annotateForClosureCompiler": true,
        "preserveWhitespaces": false,
        "strictTemplates": true,
        "strictInjectionParameters": true,
        "strictInputAccessModifiers": true,
    }
}
